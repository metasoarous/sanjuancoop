<h2>Editing Forum Post</h2>

<% form_for(@forum_post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :forum_topic_id %><br />
    <%= f.text_field :forum_topic_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @forum_post %> |
<%= link_to 'Back', forum_posts_path %>