= form_for(membership) do |f|
  = f.error_messages
  %p
    = f.label :first_name
    %br
    = f.text_field :first_name
  %p
    = f.label :last_name
    %br
    = f.text_field :last_name
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :accepts_newsletters
    %br
    = f.check_box :accepts_newsletters
  %p
    = f.submit "Submit"