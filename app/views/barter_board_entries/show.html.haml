%h3 Barter Board Entry

%p 
	%b Offered:
	= @barter_board_entry.offered_category.name
	= @barter_board_entry.offered

%p 
	%b Wanted:
	= @barter_board_entry.wanted_category.name
	= @barter_board_entry.wanted
	
%p
	%b Details:
	= @barter_board_entry.details
	
%p
	%b Contact info:
	= @barter_board_entry.contact_info
	
- if admin? or current_member == @barter_board_entry.member
	= link_to 'Edit', edit_barter_board_entry_path(@barter_board_entry)
	|
	= link_to 'Delete', @barter_board_entry, :confirm => 'Are you sure?', :method => :delete
	|
	
= link_to 'Back', barter_board_entries_path
