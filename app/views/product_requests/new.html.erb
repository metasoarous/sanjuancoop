<h2>New Product Request</h2>

<%= form_for(@product_request) do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :description %><br />
		<%= f.text_field :description %>
	</p>
	
	<p>
		<%= f.hidden_field :product_request_status_id %>
	<p>
		<%= f.submit 'Create' %>
	</p>
<% end %>

<%= link_to 'Back', product_requests_path %>