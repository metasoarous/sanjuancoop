%h1 New comment
= form_for(@comment) do |f|
  = f.error_messages
  %p
    = f.label :commentable_type
    %br/
    = f.text_field :commentable_type
  %p
    = f.label :commentable_id
    %br/
    = f.text_field :commentable_id
  %p
    = f.label :body
    %br/
    = f.text_area :body
  %p
    = f.label :user_id
    %br/
    = f.text_field :user_id
  %p
    = f.submit 'Create'
= link_to 'Back', comments_path
