<h2>Editing Forum Category</h2>

<% form_for(@forum_category) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @forum_category %> |
<%= link_to 'Back', forum_categories_path %>