<h1>Forum Topics</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Forum category</th>
  </tr>

<% @forum_topics.each do |forum_topic| %>
  <tr>
    <td><%=h forum_topic.subject %></td>
    <td><%=h forum_topic.forum_category_id %></td>
    <td><%= link_to 'Show', forum_topic %></td>
    <td><%= link_to 'Edit', edit_forum_topic_path(forum_topic) %></td>
    <td><%= link_to 'Destroy', forum_topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New forum_topic', new_forum_topic_path %>