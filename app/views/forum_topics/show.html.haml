%h2 Forum Discussion

#subscriber
	%h3
		= @forum_topic.forum_category.name
		= "::"
		= @forum_topic.subject
	%span
		- if current_user
			- if current_user.subscribed_forum_topics.include? @forum_topic
				You are currently subscribed to this topic - 
				= link_to("unsubscribe", {:controller => :forum_topic_subscriptions, :id => subscription(current_user, @forum_topic).id, :action => :destroy, :redirect => forum_topic_path(@forum_topic)}, :confirm => "Unsubscribe?", :method => :delete)
			- else
				- form_for(@forum_topic_subscription) do |f|
					= f.hidden_field :forum_topic_id, :value => @forum_topic.id
					= f.hidden_field :user_id, :value => current_user.id
					= f.submit "Subscribe to this discussion"
		

#posts
	- @forum_posts.each do |post|
		.post
			%b Posted by -
			= post.user.name if post.user
			= "::"
			= post.created_at.strftime('%a, %b %d, %Y')
			= display_post(post)
			- if admin?
				= link_to("Edit", edit_forum_post_path(post))
				
	= will_paginate @forum_posts
					
- if logged_in?
	#new_post
		%h3 Your Thoughts...
		- form_for @forum_topic.forum_posts.build do |f|
			= f.text_area :body
			= f.hidden_field :forum_topic_id, :value => @forum_topic.id
			%p= f.submit "Post"
- else
	%h4 
		You must be 
		= link_to "logged in", "/login"
		to add to this discussion
- if admin?
	= link_to "Edit", edit_forum_topic_path(@forum_topic)
	= "|"
= link_to "Main Forum Page", forum_categories_path
